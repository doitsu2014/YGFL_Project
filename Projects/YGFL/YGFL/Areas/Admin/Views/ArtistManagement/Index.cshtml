@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <div class="view-header">
            <div class="pull-right text-right" style="line-height: 14px">
                <a href="#" class="btn btn-w-md btn-accent">Create Artist</a>
            </div>
            <div class="header-icon">
                <i class="pe page-header-icon pe-7s-albums"></i>
            </div>
            <div class="header-title">
                <h3>Artists</h3>
            </div>
        </div>
        <hr>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-filled">
            <div class="panel-heading">
                <div class="panel-tools">
                    <a class="panel-toggle"><i class="fa fa-chevron-up"></i></a>
                    <a class="panel-close"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table id="artist-table" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Number Of</th>
                                <th>Artist</th>
                                <th>AvatarURL</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                           
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#artist-table").dataTable({

                "bSort": false,
                "bServerSide": true,
                "bRetrieve": true,
                "bScrollCollapse": true,
                "sAjaxSource": "@Url.Action("GetArtists", "ArtistManagement")",
                "bProcessing": true,
                "aLengthMenu": [10, 25, 50],
                "bFilter": true,
                "aoColumnDefs": [
                    {
                        "aTargets": [0],
                        "bSortable": false,
                        "sClass": "text-center mid-v-align"
                    },
                    {
                        "aTargets": [1],
                        "bSortable": false,
                        "sClass": "text-center mid-v-align"
                    },
                    {
                        "aTargets": [2],
                        "bSortable": false,
                        "sClass": "text-center mid-v-align"
                    },
                    {
                        "aTargets": [3],
                        "sClass": "text-center mid-v-align",
                        "bSortable": false,
                        "mRender": function (data, type, row) {
                            var data = row[3];
                            var artistId = row[0];
                            var artistName = row[1];
                            $edit = $('<a/>', {
                                'title':'Chỉnh sửa',
                                'class': 'btn btn-w-md btn-primary',
                                'data-action': 'open-modalCostCategory',
                                'data-type': 'edit',
                                'data-id': data,
                                'href': "@(this.Url.Action("Edit"))/"+ artistId,
                                'html': '<i class="fa fa-paste"></i> Edit'


                            });
                           
                            $trash = $('<button/>', {
                                'class': 'btn btn-w-md btn-danger',
                                'onclick': 'Delete(' + artistId + ')',
                                'html': '<i class="fa fa-trash-o"></i> Delete'
                             });

                            return $edit[0].outerHTML +" "+ $trash[0].outerHTML;

                        },
                        "bSortable": false,
                    },
                ],
                "bAutoWidth": false,
            });

        });
    </script>
}